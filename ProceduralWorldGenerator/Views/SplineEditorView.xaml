<UserControl x:Class="ProceduralWorldGenerator.Views.SplineEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:splines="clr-namespace:ProceduralWorldGenerator.ViewModels.Splines"
             xmlns:views="clr-namespace:ProceduralWorldGenerator.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=splines:SplineEditorViewModel}">
    <views:SplineEditorPlotView 
        Model="{Binding Plot.Value, Mode=OneWay}"
        Background="{DynamicResource NodifyEditor.BackgroundBrush}" 
        Foreground="{DynamicResource NodifyEditor.ForegroundBrush}" 
        LineColor="{DynamicResource BackgroundBrush}">
    </views:SplineEditorPlotView>
</UserControl>

<UserControl x:Class="ProceduralWorldGenerator.Views.CreateNodes.CreateSplineNodeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:createNodes="clr-namespace:ProceduralWorldGenerator.ViewModels.CreateNodes"
             xmlns:views="clr-namespace:ProceduralWorldGenerator.Views"
             xmlns:splines="clr-namespace:ProceduralWorldGenerator.Views.Splines"
             xmlns:createNodes1="clr-namespace:ProceduralWorldGenerator.Views.CreateNodes"
             mc:Ignorable="d"
             MinWidth="250"
             d:DesignHeight="*"
             d:DesignWidth="*"
             d:DataContext="{d:DesignInstance createNodes:CreateSplineNodeViewModel}">
    <UserControl.Resources>
        <ResourceDictionary Source="CreateNodeViewResources.xaml"/>
    </UserControl.Resources>

    <createNodes1:CreateNodeBaseView Title="Create spline" 
                                     OkButtonCommand="{Binding CreateOperation}" 
                                     CancelButtonCommand="{Binding CancelOperation}"
                                     DataContext="{Binding}"
                                     d:DataContext="{d:DesignInstance createNodes:CreateSplineNodeViewModel}">
        <StackPanel Orientation="Horizontal">
            <splines:SplineEditorView
                Width="1000" 
                Height="1000" 
                LineBrush="{DynamicResource CircuitConnection.StrokeBrush}" 
                GridBrush="{DynamicResource GridLinesBrush}"
                DataPoints="{Binding NodeViewModel.Spline.DataPoints}"
                RepeatClampCount="10"
                RightClamp="{Binding NodeViewModel.Spline.RightClamp}"
                LeftClamp="{Binding NodeViewModel.Spline.LeftClamp}"
                TextForeground="{DynamicResource ForegroundBrush}">
            </splines:SplineEditorView>
            <ListBox Style="{StaticResource ThirdPartyStyle}" ItemsSource="{Binding NodeViewModel.Spline.DataPoints, Mode=OneWay}"></ListBox>
        </StackPanel>
    </createNodes1:CreateNodeBaseView>
    
    
</UserControl>
<UserControl x:Class="ProceduralWorldGenerator.Views.CreateNodes.CreateSplineNodeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:createNodes="clr-namespace:ProceduralWorldGenerator.ViewModels.CreateNodes"
             xmlns:views="clr-namespace:ProceduralWorldGenerator.Views"
             xmlns:splines="clr-namespace:ProceduralWorldGenerator.Views.Splines"
             mc:Ignorable="d"
             MinWidth="250"
             d:DesignHeight="*"
             d:DesignWidth="*"
             d:DataContext="{d:DesignInstance createNodes:CreateSplineNodeViewModel}">
    <UserControl.Resources>
        <ResourceDictionary Source="CreateNodeViewResources.xaml"/>
    </UserControl.Resources>

    <Border Style="{StaticResource BorderStyle}">
        <StackPanel>
            <TextBlock Text="{Binding Description}"/>
            <Grid>
                <splines:SplineEditorView
                    Width="1000" 
                    Height="1000" 
                    LineBrush="{DynamicResource CircuitConnection.StrokeBrush}" 
                    GridBrush="{DynamicResource GridLinesBrush}"
                    DataPoints="{Binding Spline.DataPoints}"
                    RepeatClampCount="10"
                    RightClamp="{Binding Spline.RightClamp}"
                    LeftClamp="{Binding Spline.LeftClamp}"
                    TextForeground="{DynamicResource ForegroundBrush}">
                </splines:SplineEditorView>
            </Grid>

            <ContentPresenter ContentTemplate="{StaticResource OkCancel}" Content="{Binding}"/>
        </StackPanel>
    </Border>
</UserControl>
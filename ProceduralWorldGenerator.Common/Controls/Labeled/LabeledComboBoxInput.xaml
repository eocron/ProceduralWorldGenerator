<UserControl x:Class="ProceduralWorldGenerator.Common.Controls.Labeled.LabeledComboBoxInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:labeled="clr-namespace:ProceduralWorldGenerator.Common.Controls.Labeled"
             mc:Ignorable="d"
             d:DesignHeight="40"
             d:DesignWidth="300"
             d:DataContext="{d:DesignInstance labeled:LabeledComboBoxInput}">
    <Grid x:Name="Root">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="Labels" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" HorizontalAlignment="Left" Text="{Binding LabelText}" />
        <ComboBox Grid.Column="1" ItemsSource="{Binding ItemSource}" SelectedValue="{Binding SelectedValue}"
                  SelectedValuePath="Value" DisplayMemberPath="Description" />
    </Grid>
</UserControl>